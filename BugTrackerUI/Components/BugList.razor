@using BugTrackerUI.Services
@using System.Net
<h3>All Bugs</h3>
<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Priority</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var bug in Bugs)
    {
        <tr>
            <td>@bug.Id</td>
            <td>@bug.Title</td>
            <td>@bug.Description</td>
            <td>@bug.Priority</td>
        </tr>
    }
    </tbody>
</table>

@code {

    [Inject]
    public IBugService BugService { get; set; } = new BugService();

    public List<Bug> Bugs;

    protected override void OnInitialized()
    {
        Bugs = BugService.GetBugs().OrderBy(x=> x.Priority).ToList();
    }

}
